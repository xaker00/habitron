{{!-- This will be the file to add/update/edit habits that the user wants to track --}}
<div class = "row">
    <div class = "col s3 new-habit-spot">
        <h4 class = "center-align">Add A New Habit</h4>

        <form class="form habit-form">
            {{!-- <div class="form-group">
                <label for="habit-cateogry">Category:</label>
                <input class="form-input" type="text" id="habit-category" />
            </div> --}}
            <div class="form-group">
                <label for="new-habit">Habit:</label>
                <input class="input-field new-habit"  type="text"/>
            </div>
             <button class="btn btn-primary btn-post-add" type="submit">Add</button>
        </form>

    {{!-- {{#if habits.length}} --}}
    <div class="habit-list">
        <h4 class="center-align">Active Habits:</h4>
        {{#each habits}}
        <ul class="habit-description">
            <li class="habit-delete">{{description}}
                <button class="btn btn-primary btn-delete right red" id="{{id}}" type="button">Delete</button>
            </li>
        </ul>    
        {{/each}}
    </div>
    {{!-- {{/if}} --}}
    </div>


    <div class="col s9 center-align habit-grid">
        <h4>Habit Logging Grid</h4>
    
     <table class= "centered">
        <thead>
          <tr>

              <th></th>
              <th>{{ format_date (dateSixDay) }}</th>
              <th>{{ format_date (dateFiveDay) }}</th>
              <th>{{ format_date (dateFourDay) }}</th>
              <th>{{ format_date (dateThreeDay) }}</th>
              <th>{{ format_date (dateTwoDay) }}</th>
              <th>{{ format_date (dateYesterday) }}</th>
              <th>{{ format_date (dateNow) }}</th>

          </tr>
        </thead>

        <tbody>
            {{#each log2 as | log |}}
            <tr>
                <td>{{log.description}}</td>
                {{#each log.status as | stat |}}
                <td>
                    <label class ="center status-box">
                        <input type="checkbox" id="{{stat.id}}" data-habit-id="{{log.habit_id}}" data-day="{{stat.entry_date}}" {{stat.status}}/>
                        <span>&nbsp;</span>
                    </label>
                </td>
                {{/each}}
            </tr>
            {{/each}}
        
          </tr>
        </tbody>
      </table>
    </div>

</div>

<script src="/js/app.js" > </script>