{{! This will be the area where the dashboard is made? }}
<!-- Template 
  habits
            category: "Exercise"
            title: "Running",
            description: "Run for 60 mins every day",
            completion rate: "10%",
            completed_day: 1,
            total_day: 6
-->
<div class="dashboard-container">
  <div class="dashboard-header">
    <h3>My Habit Tracker</h3>
  </div>
  <div class="block-content">
    {{#each habits}}
      <div class="dashboard-content">
        <div class="dashboard-row">
          <div class="dashboard-category {{category}}">
            <a tooltip="Category" class="category">{{category}}</a>
          </div>
          <div class="habit-title">
            <h5>{{description}}</h5>
          </div>
          <div class="habit-progress">
            <div class="habit-bar">
              <div class="habit-track">
                <span class="status-text">{{status}}</span>
                <div class="status-fill" style="width:{{status}}"></div>
              </div>
            </div>
          </div>
          <div class="habit-progress"><a
              tooltip="Completion Rate ( Completed day / Total day )"
              class="tooltip"
            > <small>( {{timeUsed}} / {{timeTotal}} )</small></a></div>
        </div>
      </div>
    {{/each}}
  </div>
</div>